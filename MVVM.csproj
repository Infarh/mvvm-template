<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>  
    <PackageType>Template</PackageType>
    <TargetFramework>net5.0-windows</TargetFramework>
    <UseWPF>true</UseWPF>
  </PropertyGroup>

  <PropertyGroup>
    <PackageVersion>1.0.0</PackageVersion>
    <PackageId>MathCore.Templates.MVVM</PackageId>
    <Title>Шаблон инфраструктуры MVVM</Title>
    <Authors>shmachilin@gmail.com</Authors>
    <Description>Шаблон содержит инфраструктуру MVVM для проектов WPF</Description>
    <PackageTags>WPF;MVVM</PackageTags>
	
    <IncludeContentInPack>true</IncludeContentInPack>
    <IncludeBuildOutput>false</IncludeBuildOutput>
    <ContentTargetFolders>content</ContentTargetFolders>
  </PropertyGroup>
  
  <ItemGroup>
    <Content Include="templates\**\*" Exclude="templates\**\bin\**;templates\**\obj\**" />
    <Compile Remove="**\*" />
  </ItemGroup>

</Project>
